{
    "version": 2,
    "builds": [
      {
        "src": "main.py",
        "use": "@vercel/python",
        "config": { "runtime": "python3.12" }
      }
    ],
    "routes": [
      {
        "src": "/(.*)",
        "dest": "main.py"
      }
    ],

    "scripts": {
    "start": "uvicorn main:app --host 0.0.0.0 --port $PORT --workers 4"
  }
}